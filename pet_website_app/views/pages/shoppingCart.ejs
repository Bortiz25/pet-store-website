<!DOCTYPE html>
<html>
    <head>
        <link rel='stylesheet' href='/stylesheets/style.css' />
    </head>
    <%- include('../partials/navigationBar') %>
    <body>
      <h1> <%=title%> </h1>
      <button type="button" class="collapsible">Order Summary</button>
      <div class="content">
        <p>Subtotal: </p>
        <p>Shipping: </p>
        <p>Tax: </p>
        <p>Total: </p>
      </div>

      <script>
        var coll = document.getElementsByClassName("collapsible");
        var i;
        
        for (i = 0; i < coll.length; i++) {
          coll[i].addEventListener("click", function() {
            this.classList.toggle("active");
            var content = this.nextElementSibling;
            if (content.style.display === "block") { //collapsable closed!
              content.style.display = "none";
            } else { //collapsable opened!
              content.style.display = "block";
            }
          });
        }
      </script>

      <% for(i=0;i<products.length;i++) {%>
        <div class="row">
          <div class="column">
            <img src=<%= products[i].img %> style="width:100%;height:auto;">
            <h2><%= products[i].productName %></h2>
            <h3>$<%= products[i].price %></h3>
            <body><%= products[i].description %></body>
            <h3></h3>
            <form action="/pages/shoppingCart/<%= encodeURIComponent(products[i].productName) %>" method="post">
              <input type="number" name="number" min="1" max="100" value="1"/>
              <button type="submit">Delete</button>
            </form>
          </div>
          <%i++%>
          <%if(i<products.length) {%>
            <div class="column">
              <img src=<%= products[i].img %> style="width:100%;height:auto;">
              <h2><%= products[i].productName %></h2>
              <h3>$<%= products[i].price %></h3>
              <body><%= products[i].description %></body>
              <h3></h3>
              <form action="/pages/shoppingCart/<%= encodeURIComponent(products[i].productName) %>" method="post">
                <input type="number" name="number" min="1" max="100" value="1"/>
                <button type="submit">Delete</button>
              </form>
            </div>
          <%}%>
          <%i++%>
          <%if(i<products.length) {%>
            <div class="column">
              <img src=<%= products[i].img %> style="width:100%;height:auto;">
              <h2><%= products[i].productName %></h2>
              <h3>$<%= products[i].price %></h3>
              <body><%= products[i].description %></body>
              <h3></h3>
              <form action="/pages/shoppingCart/<%= encodeURIComponent(products[i].productName) %>" method="post">
                <input type="number" name="number" min="1" max="100" value="1"/>
                <button type="submit">Delete</button>
              </form>
            </div>
          <%}%>
        </div>
      <%}%>
    </body>
    <%- include('../partials/copyright') %>
</html>